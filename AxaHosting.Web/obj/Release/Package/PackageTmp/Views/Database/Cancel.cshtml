@model AxaHosting.Web.ViewModels.DatabaseCancelViewModel


@{
    ViewBag.Title = "Cancel database named " + Model.Database.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet light portlet-fit">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-user font-blue"></i>
                    <span class="caption-subject font-blue bold uppercase">Cancel database named @Model.Database.Name</span>
                </div>

            </div>
            <div class="portlet-body">

                @using (Html.BeginForm("Cancel", "Database", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(m => m.DatabaseId)
                       <input type="hidden" name"="CancelDatabase" value="true"/>
                        <p>Are you sure you want to cancel your database?</p>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Yes" class="btn btn-default"/><a href="@Url.Action("Cancel", "Database", new { id = Model.Database.Id, nope = true})" class="btn btn-default">NO GET ME OUT OF HERE</a>
                            </div>
                        </div>
                    </div>
                }



            </div>
        </div>
    </div>
   
</div>