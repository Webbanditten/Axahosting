@using AxaHosting.Model
@model AxaHosting.Web.ViewModels.ControlPanelProductsViewModel
    @{
        ViewBag.Title = "Your Products";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

@if (Model.MessageType != null && Model.MessageText != null)
{
    <div class="alert alert-@Model.MessageType">
        @Model.MessageText
    </div>
}


<div class="row">
    <div class="col-md-12">
        <div class="portlet light portlet-fit">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cube font-blue"></i>
                    <span class="caption-subject font-blue bold uppercase">Web Hotels</span>
                </div>

            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Domain
                                </th>
                                <th>
                                    Created
                                </th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var w in Model.WebHotels)
                            {
                                <tr>
                                    <td>@w.Domain</td>
                                    <td>@w.CreatedDate.ToShortDateString()</td>
                                    <td>
                                        <a href="@Url.Action("Index", "WebHotel", new {id = w.Id})" class="btn dark btn-sm btn-outline sbold uppercase">
                                            <i class="fa fa-share"></i> Details
                                        </a>
                                        <a href="@Url.Action("Index", "Mail", new {webHotelId = w.Id})" class="btn dark btn-sm btn-outline sbold uppercase">
                                            <i class="fa fa-evelope"></i> Mail accounts
                                        </a>
                                        <a href="@Url.Action("Edit", "WebHotel", new {id = w.Id})" class="btn dark btn-sm btn-outline sbold uppercase">
                                            <i class="fa fa-cog"></i> Settings
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @if (!Model.WebHotels.Any())
                    {
                        <div class="alert alert-info">
                            <strong>No Webhotels available</strong>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light portlet-fit">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-database font-blue"></i>
                    <span class="caption-subject font-blue bold uppercase">Databases</span>
                </div>

            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Database Name
                                </th>
                                <th>Type</th>
                                <th>
                                    Created
                                </th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var w in Model.Databases)
                            {
                                <tr>
                                    <td>@w.Name</td>
                                    <td>@{
                                        if (w.Server.Type == ServerType.MsSql)
                                        {<text>MSSQL</text>
                                        }
                                        else if (w.Server.Type == ServerType.MySql)
                                        {<text>MySQL</text>
                                        }
                                    }</td>
                                    <td>@w.CreatedDate.ToShortDateString()</td>
                                    <td>
                                        <a href="@Url.Action("Index", "Database", new {id = w.Id})" class="btn dark btn-sm btn-outline sbold uppercase">
                                            <i class="fa fa-share"></i> Details
                                        </a>
                                        <a href="@Url.Action("Edit", "Database", new {id = w.Id})" class="btn dark btn-sm btn-outline sbold uppercase">
                                            <i class="fa fa-cog"></i> Settings
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @if (!Model.Databases.Any())
                    {
                        <div class="alert alert-info">
                            <strong>No databases available</strong>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
